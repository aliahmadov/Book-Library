<Window x:Class="BookLibrary.Windows.Additional_Windows.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibrary.Windows.Additional_Windows"
        mc:Ignorable="d"
        Title="AddCategoryWindow" Height="125" Width="250">
    <Grid Background="White">
        <StackPanel>
            <Label Margin="10" HorizontalContentAlignment="Center" 
                       Foreground="Red" FontWeight="Black">Add Category</Label>

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Label>Category</Label>
                <TextBox Margin="10,0,0,0" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="145"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
